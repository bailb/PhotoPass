/* 裁剪区域样式 */
.cropper-section {
  margin-top: 20rpx;
}

.card-header {
  text-align: center;
  margin-bottom: 30rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.card-desc {
  font-size: 24rpx;
  color: #666;
}

.main-workspace {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.image-area {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  /* 🎯 新增：外层容器边框 */
  border: 2rpx solid #d0d0d0;
  border-radius: 16rpx;
  padding: 20rpx;
  background: #f8f8f8;
  /* 🎯 新增：让内容居中 */
  align-items: center;
  /* 🎯 真机调试修复：确保外层容器也隐藏超出部分 */
  overflow: hidden;
  position: relative;
}

.cropper-container {
  background: white;
  border-radius: 12rpx;
  padding: 0rpx; /* 🎯 移除padding，让图片贴边 */
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  position: relative;
  overflow: hidden; /* 🎯 修复：隐藏超出边界的图片部分 */
  /* 🎯 确保容器尺寸与图片尺寸匹配 */
  width: 500rpx; /* 直接使用图片尺寸 */
  height: 500rpx; /* 直接使用图片尺寸 */
  /* 🎯 新增：添加边框美化画布 */
  border: 2rpx solid #e0e0e0;
  /* 🎯 真机调试修复：强制隐藏超出部分 */
  -webkit-overflow-scrolling: touch;
  overflow-x: hidden;
  overflow-y: hidden;
}

.cropper-image {
  width: 500rpx;
  height: 500rpx;
  border-radius: 10rpx; /* 🎯 调整圆角与容器协调 */
  transition: transform 0.3s ease;
  transform-origin: center center;
  /* 🎯 真机调试修复：确保图片不会超出容器 */
  max-width: 100%;
  max-height: 100%;
  object-fit: cover;
  display: block;
}

/* 裁剪框样式 */
.crop-frame {
  position: absolute;
  top: 0rpx; /* 🎯 移除偏移，直接贴边 */
  left: 0rpx; /* 🎯 移除偏移，直接贴边 */
  width: 100%; /* 🎯 直接使用100% */
  height: 100%; /* 🎯 直接使用100% */
  pointer-events: auto;
  z-index: 10;
  overflow: visible;
}


.crop-overlay {
  position: relative;
  width: 100%;
  height: 100%;
}

.crop-border {
  position: absolute;
  top: 0;
  left: 0;
  border: 4rpx dashed #667eea;
  border-radius: 8rpx;
  background: rgba(102, 126, 234, 0.2);
  box-shadow: 0 0 20rpx rgba(102, 126, 234, 0.8);
  transition: all 0.3s ease;
  cursor: move;
  user-select: none;
  pointer-events: auto;
  z-index: 999;
}

.crop-border.dragging {
  border-color: #ff6b6b;
  box-shadow: 0 0 30rpx rgba(255, 107, 107, 0.7);
  transform: scale(1.02);
}

/* 辅助线样式 */
.crop-guide-line {
  position: absolute;
  background: rgba(102, 126, 234, 0.6);
  pointer-events: none;
}

/* 测试标记样式 */
.test-marker {
  position: absolute;
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  pointer-events: none;
  z-index: 20;
}

/* 垂直辅助线 */
.crop-guide-vertical-1 {
  left: 33.33%;
  top: 0;
  width: 1rpx;
  height: 100%;
}

.crop-guide-vertical-2 {
  left: 66.67%;
  top: 0;
  width: 1rpx;
  height: 100%;
}

/* 水平辅助线 */
.crop-guide-horizontal-1 {
  left: 0;
  top: 33.33%;
  width: 100%;
  height: 1rpx;
}

.crop-guide-horizontal-2 {
  left: 0;
  top: 66.67%;
  width: 100%;
  height: 1rpx;
}

/* 四周透明按钮样式 */
.crop-btn {
  position: absolute;
  background: transparent !important;
  border: 1rpx solid rgba(102, 126, 234, 0.3);
  color: #667eea;
  font-size: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: none;
  transition: all 0.3s ease;
  z-index: 1000;
  box-sizing: border-box;
  padding: 0 !important;
  margin: 0 !important;
  line-height: 1 !important;
}

.crop-btn:active {
  background: rgba(102, 126, 234, 0.25);
  transform: scale(0.95);
}

/* 上下按钮 - 长方形 */
.crop-btn-up {
  top: -1rpx;
  left: 50%;
  width: 60rpx !important;
  height: 20rpx !important;
  min-width: 60rpx !important;
  max-width: 60rpx !important;
  border-radius: 0 0 10rpx 10rpx;
  transform: translateX(-50%);
  box-sizing: border-box;
}

.crop-btn-down {
  bottom: -1rpx;
  left: 50%;
  width: 60rpx !important;
  height: 20rpx !important;
  min-width: 60rpx !important;
  max-width: 60rpx !important;
  border-radius: 10rpx 10rpx 0 0;
  transform: translateX(-50%);
  box-sizing: border-box;
}

/* 左右按钮 - 竖着长的长方形 */
.crop-btn-left {
  left: -1rpx;
  top: 50%;
  width: 20rpx !important;
  height: 60rpx !important;
  min-width: 20rpx !important;
  max-width: 20rpx !important;
  border-radius: 0 10rpx 10rpx 0;
  transform: translateY(-50%);
  box-sizing: border-box;
}

.crop-btn-right {
  right: -1rpx;
  top: 50%;
  width: 20rpx !important;
  height: 60rpx !important;
  min-width: 20rpx !important;
  max-width: 20rpx !important;
  border-radius: 10rpx 0 0 10rpx;
  transform: translateY(-50%);
  box-sizing: border-box;
}


/* Canvas样式 */
.crop-canvas {
  position: absolute;
  top: -9999rpx; /* 🎯 修复：将Canvas移到屏幕外，避免影响布局 */
  left: -9999rpx; /* 🎯 修复：将Canvas移到屏幕外，避免影响布局 */
  /* 🎯 修复：Canvas尺寸由JavaScript动态设置，CSS不限制 */
  opacity: 0;
  pointer-events: none;
  border-radius: 8rpx;
  /* 🎯 修复：确保Canvas尺寸不被CSS影响，但允许设置 */
  max-width: none !important;
  max-height: none !important;
  min-width: auto !important;
  min-height: auto !important;
  /* 🎯 修复：确保Canvas不会影响页面布局但保持可见性 */
  z-index: -1;
  /* 🎯 修复：移除visibility: hidden，确保Canvas可以正确初始化 */
}

