/* 调试信息样式 */

/* 水平比例尺样式 */
.scale-ruler-container {
  margin-top: 20rpx;
  padding: 0 20rpx;
  /* 🎯 修复：确保缩放比例尺不被压缩 */
  width: 100%;
  flex-shrink: 0;
}

.scale-ruler {
  background: white;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  /* 🎯 修复：确保缩放比例尺有足够宽度 */
  min-width: 400rpx;
}

.scale-track {
  position: relative;
  height: 60rpx;
  background: linear-gradient(to right, #ff4d4f, #faad14, #52c41a);
  border-radius: 30rpx;
  margin-bottom: 16rpx;
}

.scale-handle {
  position: absolute;
  top: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background: white;
  border: 4rpx solid #667eea;
  border-radius: 50%;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  cursor: pointer;
  transform: translateX(-50%);
}

.scale-mark {
  position: absolute;
  top: 70rpx;
  font-size: 20rpx;
  color: #666;
  font-weight: 600;
}

.scale-mark-left {
  left: 0;
}

.scale-mark-center {
  left: 50%;
  transform: translateX(-50%);
}

.scale-mark-right {
  right: 0;
}

.scale-info {
  text-align: center;
}

.scale-current {
  font-size: 28rpx;
  font-weight: 600;
  color: #667eea;
}



