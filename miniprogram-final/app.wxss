/* 全局样式 */
page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  background-attachment: fixed;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  min-height: 100vh;
}

.container {
  padding: 20rpx;
  min-height: 100vh;
}

/* 通用按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.btn-success {
  background: linear-gradient(135deg, #52c41a, #73d13d);
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.btn-default {
  background: white;
  color: #333;
  border: 2rpx solid #e8ecf7;
  border-radius: 12rpx;
  padding: 20rpx 30rpx;
  font-size: 28rpx;
  font-weight: 600;
}

/* 卡片样式 */
.card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  margin-bottom: 30rpx;
}

/* 输入框样式 */
.input-group {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.input {
  flex: 1;
  padding: 20rpx;
  border: 2rpx solid #e8ecf7;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.input-separator {
  font-weight: 600;
  color: #666;
  font-size: 32rpx;
}

/* 提示信息 */
.hint {
  background: rgba(102, 126, 234, 0.1);
  border: 1rpx solid rgba(102, 126, 234, 0.2);
  border-radius: 8rpx;
  padding: 16rpx 24rpx;
  font-size: 24rpx;
  color: #667eea;
  margin-bottom: 20rpx;
  text-align: center;
}


